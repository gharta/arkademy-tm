<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="set_open_wizard" model="ir.ui.view">
            <field name="name">set.open.wizard</field>
            <field name="model">set.open.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name='state' required="1"/>
                            <field name='pegawai_id' required="1"/>
                            <field name='notes'/>
                        </group>
                    </group>
                    <footer>
                        <button name="process_wizard"
                            string="Process"
                            type="object"
                            class="oe_highlight"
                            />
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>